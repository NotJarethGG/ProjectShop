@model Inventory.Models.ViewModels.ProductoVM
@{
    var x = TempData["NoProducto"];
}
<div class="container mt-5">
    <form method="post">
        <div col-8 pt-4>
            <br />
            <div class="form-group row mt-1">
                <div class="col-4">
                    <select class="form-control" asp-items="Model.CategoriaLista" name="categoria">
                        <option>Todas las categorías</option>
                    </select>
                </div>
                <div class="col-4">
                    <input class="form-control" name="filtro" placeholder="Buscar por nombre" />
                </div>
                <div class="col-4">
                    <button type="submit" class="btn btn-dark" asp-action="Index">Buscar</button>
                </div>
            </div>
        </div>
    </form>
    <br /><br />
    <div class="row pb-3">
        @foreach (var producto in Model.ProductoLista)
        {
            <div class="col-lg-3 col-md-6 mt-5">
                <div class="row">
                    <div class="col-12">
                        <div class="card d-flex flex-column align-items-center border-info"
                             style="border:1px;max-width:85%;max-height:350px;min-height:375px;">
                            <img src="@producto.ImageUrl" class="card-img-top rounded img-fluid"
                                 style="max-height:200px;" alt="Alternate Text" />
                            <div class="pl-1">
                                <p class="card-title h5">
                                    <b style="color:#2c3e50">@producto.Descripcion</b>
                                </p>
                            </div>
                            <div style="padding-left:5px;">
                                <p>Precio: <b>¢@producto.Precio.ToString("###,###.00")</b></p>
                            </div>

                            <div style="margin-left:50%;margin-bottom:10px;">
                                <a asp-action="Detalle"
                                   class="btn btn-dark float-left form-control"
                                   style="width:200px;"
                                   asp-route-id="@producto.Id">Detalle</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
